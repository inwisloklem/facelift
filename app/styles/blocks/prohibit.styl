.prohibit
  overflow: auto
  
  @media $desktop
    background-image: url("../img/background-prohibit.png")
    background-size: cover

  &__wrapper
    overflow: auto
    padding: 0 20px

    @media $tablet-desktop
      padding: 0 40px

    @media $desktop
      margin: auto
      max-width: 1100px
      background-color: $white

  &__title
    margin-top: 20px
    margin-bottom: 20px
    text-align: center
    font(1.3125em, 1.333, 700, uppercase)

    @media $desktop
      margin-top: 40px

  &__list
    margin-bottom: 40px
    font(1.125em, 1.5, 200)

  &__item
    margin-bottom: 15px
    padding-left: 32px
    list-style-type: none
    background: url("../img/icon-list-2.png") no-repeat left top 2px
    
    &:last-of-type
      margin-bottom: 0