.timer
  text-align: center

  &__title
    margin-bottom: 10px
    color: $mine-shaft
    text-align: center
    text-transform: none
    font(1.4em, 1.2, 500)

  &__block
    display: inline-block
    margin-right: 4px

    &:last-of-type
      margin-right: 0

  &__cell
    display: inline-block
    margin-right: 3px
    width: 30px
    height: 40px
    border-radius: 5px
    color: $mine-shaft
    background-color: $white
    text-align: center
    font(24px, 46px, 700)

  &__text
    color: $mine-shaft
    text-align: center
    text-transform: lowercase
    font(0.94em, 1.2)