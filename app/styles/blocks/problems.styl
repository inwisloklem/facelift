.problems
  overflow: auto
  margin-bottom: 20px
  
  display: flex
  flex-direction: column
  
  @media $desktop
    flex-direction: row    
    padding: 20px 0

  &__wrapper
    @media $desktop
      padding-left: 40px

  &__title
    margin-top: 20px
    margin-bottom: 20px
    color: $sherwood-green
    text-align: center
    text-decoration: underline
    font(1.22em, 1.333, 200, uppercase)

    @media $desktop
      margin-top: 40px
      text-align: left

  &__image
    display: none
    margin-top: 20px

    img
      display: block
      margin: auto
      
    @media $tablet-desktop
      display: block

  &__list
    font(1.125em, 1.5, 200)
    
    @media $desktop
      font(1.125em, 1.3)

  &__item
    margin-bottom: 15px
    padding-left: 32px
    list-style-type: none
    background: url("../img/icon-list-1.png") no-repeat left center
    
    &:last-of-type
      margin-bottom: 0