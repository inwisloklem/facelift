.page-header
  overflow: auto
  background-color: $robins-egg-blue
  background-image: linear-gradient(to bottom, $feta 0, $robins-egg-blue 100%)
  
  @media $tablet-desktop
    background-image: url("../img/background-top.png"), linear-gradient(to bottom, $feta 0, $robins-egg-blue 100%)
    background-size: cover

  @media $desktop
    background-image: url("../img/background-girl.png"), url("../img/background-top.png"), linear-gradient(to bottom, $feta 0, $robins-egg-blue 100%)
    background-size: auto, cover, cover
    background-position: left calc(50% - 200px) bottom, center, center
    background-repeat: no-repeat

  &__title
    margin-bottom: 20px
    text-align: center
    font(1.3125em, 1.333, 500, uppercase)

    @media $desktop
      text-align: left
      
      &:last-of-type
        text-align: right

  &__timer
    margin-top: 20px
    margin-bottom: 20px

  &__hgroup
    margin-top: 40px

    @media $desktop
      margin-bottom: 40px

  &__note
    margin-bottom: 20px
    color: $amaranth
    text-align: center
    text-decoration: underline
    font(1.3125em, 1.333, 500, uppercase)

  &__wrapper
    @media $desktop
      margin-right: 180px
      margin-left: auto
      width: 335px