.btn
  position: relative
  z-index: 5
  display: inline-block
  padding: 0 30px
  height: 40px
  border: none
  border-radius: 10px
  color: $mine-shaft
  outline: none
  background-color: $cranberry
  background-image: linear-gradient(to bottom, $manhattan 0, $cranberry 100%)
  font(1.125em, 2.22, 700, uppercase)
  
  &::before
    position: absolute
    z-index: -5
    top: 0
    left: 0
    border-radius: 10px
    width: 100%
    height: 100%
    background-image: linear-gradient(to bottom, darken($manhattan, 10%) 0, darken($cranberry, 10%) 100%)
    content: ""
    opacity: 0
    
    transition: opacity 0.4s ease-in-out
    
  &:hover
    &::before
      opacity: 1

      transition: opacity 0.4s ease-in-out
      
  &:active
    color: darken($white, 10%)